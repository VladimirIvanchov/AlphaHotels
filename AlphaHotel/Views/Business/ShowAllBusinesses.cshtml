@model IPaginatedList<BusinessShortInfoDTO>

@{
    ViewData["Title"] = "ShowAllBusinesses";
}

<section class="section_gap">
    <div class="container">
        <h2>All Hotels</h2>

        <div class="row mb_30">
            @foreach (var business in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-recent-blog-post">
                        <div class="thumb">
                            <img class="img-fluid" src="~/images/hotelPresentation/@business.CoverPicture" alt="post">
                        </div>
                        <div class="details">
                            <div class="tags">
                                <a asp-controller="Business" asp-action="Details" asp-route-id=@business.Id class="button_hover tag_btn">Details</a>
                            </div>
                            <a asp-controller="Business" asp-action="Details" asp-route-id=@business.Id><h4 class="sec_h4">@business.Name</h4></a>
                            <p>@business.ShortDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />

        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <a asp-area="Manager" asp-controller="LogBook" asp-action="AllLogbookLogs" asp-route-keyword="@Model.CurrentFilter"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-default @prevDisabled">
            Previous
        </a>
        <a asp-area="Manager" asp-controller="LogBook" asp-action="AllLogbookLogs" asp-route-keyword="@Model.CurrentFilter"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-default @nextDisabled">
            Next
        </a>
    </div>
</section>