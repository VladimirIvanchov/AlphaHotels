@model BusinessDetailsDTO

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/infinity-modal.css" rel="stylesheet" />

<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">@Model.Name</h2>
            <p>@Model.Location</p>
        </div>
        <div class="row mb_30">
            @foreach (var picture in Model.Pictures)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            <img src="~/images/hotelPresentation/@picture" alt="hotel picture">
                            @*<a href="#" class="btn theme_btn button_hover">Book Now</a>*@
                        </div>
                        @*<a href="#"><h4 class="sec_h4">Double Deluxe Room</h4></a>
                            <h5>$250<small>/night</small></h5>*@
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
<!--================ Facilities Area  =================-->
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Royal Facilities</h2>
            <p>Who are in extremely love with eco friendly system.</p>
        </div>
        <div class="row mb_30">
            @foreach (var facility in Model.Facilities)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="facilities_item">
                        <h4 class="sec_h4"><i class="@facility.Icon"></i>@facility.Name</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Facilities Area  =================-->
<!--================ Feedback Area  =================-->
<section class="testimonial_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Feedbacks from our Clients</h2>
        </div>
        <div class="testimonial_slider owl-carousel">
            @foreach (var feedback in Model.Feedbacks)
            {
                <div class="media testimonial_item">
                    <div class="media-body">
                        <h4>@feedback.Text</h4>
                        <p class="sec_h4">@feedback.Author</p>
                        <div class="star">
                            @for (int i = 0; i < feedback.Rate; i++)
                            {
                                <a><i class="fa fa-star"></i></a>
                            }

                            @for (int i = feedback.Rate; i < 5; i++)
                            {
                                <a><i class="fa fa-star-o"></i></a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <button type="button" id="all-feedbacks-btn" class="btn btn-block btn-warning btn-lg" data-toggle="modal" data-url="/feedback/listallfeedbacksforscroll" data-target="#exampleModalLong">
            See all feedbacks
        </button>
        <div id="all-feedback"></div>
    </div>
</section>
@if (!User.Identity.IsAuthenticated)
{
    <partial name="_SendFeedbackPopup" model="new SendFeedbackViewModel()" />
}
<!--================ Feedback Area  =================-->
<!--================ About History Area  =================-->
<section class="about_history_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-md-6 d_flex align-items-center">
                <div class="about_content ">
                    <h2 class="title title_color">About Us <br>Our History<br>Mission & Vision</h2>
                    <p>@Model.About</p>
                    @*<a href="#" class="button_hover theme_btn_two">Request Custom Price</a>*@
                </div>
            </div>
            <div class="col-md-6">
                <img class="img-fluid" src="~/images/hotelPresentation/@Model.CoverPicture" alt="img">
            </div>
        </div>
    </div>
</section>
<!--================ About History Area  =================-->

@section Scripts  {
    <script src="~/js/infinity-scroll.js"></script>
}