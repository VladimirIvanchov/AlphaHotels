@model AddLogViewModel

<link rel="stylesheet" href="~/css/modal-button.css">

<button type="button" class="btn btn-primary fab" data-toggle="modal" data-target="#exampleModal" id="modal-btn"> + </button>
@*asp-area="Manager" asp-controller="logbook" asp-action="GetLogBooksAndCategories"*@
<div class="modal fade centered-modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Log</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-area="Manager" asp-controller="LogBook" asp-action="AddLog" id="add-log-form">
                    <div id="dropdown-partial">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description" class="col-form-label">Log Description:</label>
                        <textarea asp-for="@Model.Description" rows="3" class="form-control" id="log-description"></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <partial name="_validationscriptspartial" />
    @*<script src="~/js/add-log.js"></script>*@
}