@model CreateBusinessViewModel

@{
    ViewData["Title"] = "CreateBusiness";
}

<link href="~/css/grids.css" rel="stylesheet" />

<section class="section_gap" id="create-business-grid">
    <div class="container container-create-business">
        <div class="col-md-9">

            <h2>Create Business</h2>
            <form asp-area="Admin" asp-controller="Business" asp-action="CreateBusiness" id="create-business" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Name" class="form-control" placeholder="Title">
                    </div>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Location" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Location" class="form-control" placeholder="Location">
                    </div>
                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.About" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.About" class="form-control" placeholder="About">
                    </div>
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.ShortDescription" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.ShortDescription" class="form-control" placeholder="Short Description">
                    </div>
                    <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.CoverPicture" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.CoverPicture" class="form-control" placeholder="Picture">
                    </div>
                    <span asp-validation-for="@Model.CoverPicture" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Pictures" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Pictures" class="form-control" placeholder="Picture">
                    </div>
                    <span asp-validation-for="@Model.Pictures" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Pictures" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Pictures" class="form-control" placeholder="Picture">
                    </div>
                    <span asp-validation-for="@Model.Pictures" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Pictures" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Pictures" class="form-control" placeholder="Picture">
                    </div>
                    <span asp-validation-for="@Model.Pictures" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Pictures" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Pictures" class="form-control" placeholder="Picture">
                    </div>
                    <span asp-validation-for="@Model.Pictures" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3">Facilities</div>
                    <div class="col-sm-9">
                        @foreach (var facility in Model.AllFacilities)
                        {
                            <div class="form-check">
                                <input name="FacilitiesForTheBusiness" class="form-check-input" type="checkbox" @*id="gridCheck1"*@ value=@facility.Id>
                                <label class="form-check-label">
                                    @facility.Name
                                </label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="@Model.FacilitiesForTheBusiness" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-warning btn-lg">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @*<script src="~/js/create-business.js"></script>*@
}
