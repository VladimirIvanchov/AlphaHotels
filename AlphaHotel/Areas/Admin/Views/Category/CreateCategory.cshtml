@model CreateCategoryViewModel

@{
    ViewData["Title"] = "CreateCategory";
}

<link href="~/css/grids.css" rel="stylesheet" />

<section class="contact_area section_gap" id="create-category-grid">
    <div class="container container-create-category">
        <form asp-area="Admin" asp-controller="Business" asp-action="CreateCategory" id="create-category-form">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <h2>Current Categories</h2>
            <div class="col-md-4">
                <ul class="list-group" id="logBooks-list">
                    @if (Model.Categories != null)
                    {
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item list-group-item-dark">@category.Name</li>
                        }
                    }
                </ul>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.CategoryName">Add New Category:</label>
                    <input asp-for="@Model.CategoryName" class="form-control">
                    <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-warning btn-lg">Create</button>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/create-category.js"></script>>
}