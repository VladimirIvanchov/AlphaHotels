@model AccountViewModel

@{
    ViewData["Title"] = "EditAccount";
}

<section class="section_gap">
    <div class="container">
        <h2>EditAccount</h2>

        <form asp-area="Admin" asp-controller="Account" asp-action="EditAccount" id="edit-account" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="@Model.Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Id" class="form-control" placeholder="Id" readonly>
                </div>
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.UserName" class="form-control" placeholder="UserName">
                </div>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Role" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Role" class="form-control" placeholder="Role" readonly>
                </div>
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                </div>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.BusinessName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.BusinessName" class="form-control" readonly>
                </div>
                <span asp-validation-for="@Model.BusinessName" class="text-danger"></span>
            </div>
            <hr />
            <h3>Is deleted:</h3>
            <div class="form-check">
                <input asp-for="@Model.IsDeleted" type="radio" class="form-check-input" value="True">
                <label for="@Model.IsDeleted" class="form-check-label">Yes</label>
                @*<span asp-validation-for="@business.BusinessId" class="text-danger"></span>*@
            </div>
            <div class="form-check">
                <input asp-for="@Model.IsDeleted" type="radio" class="form-check-input" value="False">
                <label for="@Model.IsDeleted" class="form-check-label">No</label>
                @*<span asp-validation-for="@business.BusinessId" class="text-danger"></span>*@
            </div>
            @if (Model.Role == "Manager")
            {
                <hr />
                <div class="form-group">
                    <div class="col-sm-2"><h3>LogBooks:</h3></div>
                    <div class="col-sm-10">
                        @foreach (var logbook in Model.LogBooks)
                        {
                            <div class="form-check">
                                <input name="LogBookId" class="form-check-input" type="checkbox" value=@logbook.Id checked="@Model.LogBookId.Contains(logbook.Id)">
                                <label class="form-check-label">
                                    @logbook.Name
                                </label>
                            </div>
                        }
                    </div>
                </div>
                @*<span asp-validation-for="@Model.LogBooks" class="text-danger"></span>*@
            }
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/edit-account.js"></script>
}
