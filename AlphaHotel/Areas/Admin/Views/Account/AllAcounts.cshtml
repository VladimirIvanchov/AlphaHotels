@model ICollection<AccountViewModel>

@{
    ViewData["Title"] = "AllAcounts";
}

<link asp-fallback-href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
<section class="contact_area section_gap">
    <h2>All users</h2>

    <table id="table" class="table table-striped table-bordered" style="width:95%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>IsDeleted</th>
                <th>BusinessName</th>
                <th>LogBookName</th>
                <th>Modify</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.IsDeleted</td>
                    <td>@user.BusinessName</td>
                    <td>
                        @foreach (var logbook in user.LogBookName)
                        {
                            @logbook
                        }
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Account" asp-action="Details" asp-route-userId="@user.Id" class="btn">
                            <span class="fa fa-info"></span>
                        </a>
                        @if (!user.IsDeleted)
                        {
                            <a asp-area="Admin" asp-controller="Account" asp-action="Delete" asp-route-userId="@user.Id" class="btn">
                                <i class="fa fa-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>IsDeleted</th>
                <th>BusinessName</th>
                <th>LogBookName</th>
                <th>Modify</th>
            </tr>
        </tfoot>
    </table>
</section>
@section Scripts {
    <script asp-fallback-href="~/js/dataTables.bootstrap4.min.js" type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script asp-fallback-href="~/js/jquery.dataTables.min.js" type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/table.js"></script>
}
