@model FeedbackDTO

@{
    ViewData["Title"] = "EditFeedback";
}

<link href="~/css/grids.css" rel="stylesheet" />

<section class="section_gap" id="edit-feedback-grid">
    <div class="container container-edit-feedback">
        <div class="col-md-6">
            <h2>Edit Feedback</h2>
            <form asp-area="Moderator" asp-controller="Feedback" asp-action="EditFeedback" id="edit-feedback" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="@Model.Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Id" class="form-control" placeholder="Id" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Author" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Author" class="form-control" placeholder="Author">
                    </div>
                    <span asp-validation-for="@Model.Author" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Text" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Text" class="form-control" placeholder="Feedback">
                    </div>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Rate" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Rate" class="form-control" placeholder="Rating">
                    </div>
                    <span asp-validation-for="@Model.Rate" class="text-danger"></span>
                </div>
                <hr />
                <h3>Is deleted:</h3>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input asp-for="@Model.IsDeleted" type="radio" class="form-check-input" value="True">
                        <label for="@Model.IsDeleted" class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="@Model.IsDeleted" type="radio" class="form-check-input" value="False">
                        <label for="@Model.IsDeleted" class="form-check-label">No</label>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-warning btn-lg">Edit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/edit-feedback.js"></script>
}
