@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row" id="register-area">
            <div class="col-md-4">
                <section>
                    <form asp-route-returnUrl="@ViewData[" ReturnUrl"]" id="registerForm" method="post">
                        <h4>Create a new account.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.UserName"></label>
                            <input asp-for="@Model.UserName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password"></label>
                            <input asp-for="@Model.Password" class="form-control" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.ConfirmPassword"></label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input asp-for="@Model.Role" id="administrator" type="radio" class="form-check-input" value="Administrator" checked>
                                <label asp-for="@Model.Role" class="form-check-label">Administrator</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.Role" id="manager" data-url="/admin/business/allBusiness" type="radio" class="form-check-input" value="Manager">
                                <label asp-for="@Model.Role" class="form-check-label">Manager</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.Role" id="moderator" data-url="/admin/business/allBusiness" type="radio" class="form-check-input" value="Moderator">
                                <label asp-for="@Model.Role" class="form-check-label">Moderator</label>
                            </div>
                        </div>
                        <button type="submit" id="register-btn" class="btn btn-default">Register</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/create-account.js"></script>
}
